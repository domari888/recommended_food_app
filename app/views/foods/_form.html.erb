<%= form_with model: @food, local: true do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </p>
  <p>
    <%= form.file_field :image, accept: "image/jpg, image/jpeg, image/gif, image/png" %>
  </p>
  <p>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </p>
  <p><%= form.submit %></p>
<% end %>